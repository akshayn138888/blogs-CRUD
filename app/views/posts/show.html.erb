<div class = "container">
  <div class="shadow-sm p-3 mb-5 bg-white rounded overflow-wrap">
    <h1>
      <%= @post.title %>
    </h1>
    <p class="shadow-none p-3 mb-5 bg-light rounded"><%= @post.body %></p>

    <%# link_to arguments: name, path, options_object %>

  <div>
      <%= link_to( "Edit", edit_post_path(@post), class: 'btn btn-outline-primary'
      ) %> <%= link_to( "Delete", post_path(@post), method: :delete, class: 'btn
      btn-outline-primary', data: { confirm: 'are you sure?' } ) %>
    </div>
  </div>

  <%= form_with(model: [@post, @comment], local: true) do |f| %> <% if
  @comment.errors.full_messages.each do |msg| %>
  <ul>
    <li class="text-danger"><%= msg %></li>
  </ul>
  <% end %> <% end %>
  <div class="form-group">
    <%= f.text_area( :body, cols: 50, rows: 5, placeholder: "Any comments you have?", class: "form-control" ) %>
  </div>
  <%= f.submit "Comment", class: "btn btn-outline-primary" %> <br>
  <br>
  <% end %>

  <ul class="list-group answer-list">
    <% @comments.each do |comment| %>
    <li class="list-group-item">
      <p>
        <%= comment.body %><br />
        <small>
          Commented: <%= time_ago_in_words(comment.created_at) %>
        </small>
        <small>
          <%= link_to( "Delete", post_comment_path(@post, comment), method:
          :delete, data: { confirm: "Are you sure?" }, class: 'text-primary', ) %>
        </small>
      </p>
    </li>
    <% end %>
  </ul>
</div>